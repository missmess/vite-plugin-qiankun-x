{
  "compilerOptions": {
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext", "dom"],
    "target": "es5",
    "allowJs": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
